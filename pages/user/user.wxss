/* pages/user/user.wxss */



.head {
  position: absolute;
  margin: 20rpx;
  border: 1px solid #eee;
  background-color: white;
  border-radius: 30rpx;
  box-shadow: 0 15rpx 15rpx rgb(114, 113, 113,1);

  display: flex;
}
.head-top{
  height: 300rpx;
  background-color: rgb(245, 73, 73);
}

.head .head-left {
  margin: 25rpx;
  height: 170rpx;
  width: 30%;
}

.head-left image {
  width: 100%;
  height: 100%;
  /* border:1px solid red; */
}

.head .head-right {
  flex: 1;
}

.head-right view {
  margin: 35rpx 20rpx 25rpx 30rpx;
  font-size: 40rpx;
  /* border:1px solid black; */

}

.wallet {
  margin: 10rpx;
  background-color: white;
  border-radius: 5%;
  box-shadow: 0 15rpx 15rpx rgb(114, 113, 113,0.5);
  border: 1px solid #eee;

}

.wallet view {
  text-align: center;
}

.money {
  font-size: 50rpx;
}

.wallet-bottom {
  display: flex;
  
}

.wallet-bottom view {
  width: 40%;
  height: 70rpx;
  text-align: center;
  border: 1px solid black;
  border-radius: 30%;
  line-height:70rpx;
  margin: 30rpx 10rpx 10rpx 45rpx;
}

.card {
  margin: 20rpx 10rpx;
  background-color: white;
  border-radius: 10%;
  display: flex;
}

.card-top {
  white-space: nowrap;

}

.card-top view {
  width: 33%;
  display: inline-block;
  border-right: 1px solid #eee;
  text-align: center;
 

}

.card-top view view.active{
  color: rgb(194, 12, 12);
  font-size: 50rpx;
}

.card-top view text.active{
  color: rgb(194, 12, 12);
  font-size: 40rpx;
}

.card-top view view {
  border-right: 1px solid white;
  /* margin: 10rpx 10rpx 10rpx rpx; */
  font-size: 50rpx;

}

.card-top view text {
  display: block;
  text-align: center;
  color: #999;
  font-size: 34rpx;
}

.card-bottom {

  height: 100%;
  width: 100%;
}

.pro-in image {
  margin: 20rpx 10rpx 10rpx 10rpx;

  height: 350rpx;
  border-radius: 5%;
  width: 97%;
  box-shadow: 10rpx 10rpx 20rpx rgba(0, 0, 0, 0.5);

}

.noCard {
  margin: 20rpx;
  border-radius: 30rpx;
  background-color: rgb(240, 95, 95);
}

.noCard view {
  text-align: center;
  font-size: 50rpx;
  color:white;
}