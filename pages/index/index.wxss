/**index.wxss**/


.index-body image{
  width: 100%;
  height: 360rpx;
}

.index-body image{

  width: 100%;
}

.fun {

  margin: 0 20rpx;
  height:300rpx;
  display: flex;
  position: relative;
  bottom:30rpx;
  justify-content: space-around;
  overflow: hidden;
  border-radius: 30rpx;
  box-shadow: 0 12rpx 12rpx rgba(245, 2, 2, 0.842);
  background-color:rgb(253, 253, 253);
}

.fun view{
  margin-top:25rpx;
  width: 30%;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  
}

.title{
  font-size: 40rpx;
  text-align: center;
  color:#000;
  margin:10rpx;
}
.introduce{
  font-size: 30rpx;
  text-align: center;
  color:#888;
}

.fun view image{
  margin-left:10%;
  width: 80%;
  height: 150rpx;
   
}

.ing{
  height: 360rpx;
  margin:20rpx;
  overflow: hidden;
  border-radius: 30rpx;
  position: relative;
  box-shadow: 0 12rpx 12rpx rgba(245, 2, 2, 0.7);
  
}
swiper,swiper-item,swiper-item image {
  width: 100%;
  height: 360rpx;
}

.dot{
  position:absolute;
  display: flex;
  bottom :10rpx;
  width: 100%;
  justify-content: center;
}

.dot view{
  width:30rpx;
  height:30rpx;
  border-radius: 50%;
  margin: 0 10rpx;
  background-color: #999;
  opacity: 0.5;
}
.dot view.active{
  width:50rpx;
  height:30rpx;
  border-radius: 80%;
  margin: 0 10rpx;
  background-color: rgba(252, 2, 2, 0.692);
  opacity: 1;
  transition: all 2s;
}

.aaa{
  height: 130rpx;
  margin: 50rpx 20rpx;
  overflow: hidden;
  border-radius: 30rpx;
  box-shadow: 0 8rpx 8rpx rgb(240, 239, 239,0.4);
  position: relative;
  bottom: 10rpx;
  display: flex;
}
.aaa image{
  height: 130rpx;
  width: 100%;
}

